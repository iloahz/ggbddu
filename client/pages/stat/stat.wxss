page {
  width: 100%;
  height: 100%;
  --block-size: 42px;
}

.container {
  display: flex;
  flex-wrap: wrap;
  margin-left: 6px;
  margin-right: 6px;
  width: calc(100% - 12px);
  height: 100%;
  overflow: hidden;
}

.header-container {
  display: flex;
  width: 100%;
  height: var(--block-size);
  justify-content: flex-end;
  background-color: white;
}

.days {
  display: flex;
  width: calc(var(--block-size) * 7);
}

.day {
  /* border: 1px solid; */
  display: flex;
  justify-content: center;
  align-items: flex-end;
  width: var(--block-size);
  font-size: 0.7em;
}

.content-container {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  height: 100%;
  justify-content: flex-end;
  overflow: scroll;
}

::-webkit-scrollbar { 
    display: none; 
}

.months-container {
  /* display: block; */
  width: calc(var(--block-size) * 7);
}

.month-container {
  display: block;
  width: 100%;
}

.month-name-container {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: var(--block-size);
}

.month-name {
  font-size: 0.7em;
  font-weight: bold;
}

.stars-container {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  /* height: var(--block-size); */
}

.star-container {
  display: flex;
  justify-content: center;
  align-items: center;
  width: var(--block-size);
  height: var(--block-size);
}

.star {
  width: 95%;
  height: 95%;
}

.star.empty {
  visibility: hidden;
}

.star.didnt {
  background: #ebedf0;
}

.star.pretty-early {
  background: #FACEC8;
}

.star.early {
  background: #FFA398;
}

.star.normal {
  background: #EE7077;
}

.star.late {
  background: #DE2C2B;
}

.star.pretty-late {
  background: #99130A;
}

.star.future-date {
  background: #ebedf0;
}
