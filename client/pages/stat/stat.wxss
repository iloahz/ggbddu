page {
  width: 100%;
  height: 100%;
  --block-size: 42px;
}

.container {
  display: flex;
  flex-wrap: wrap;
  margin-left: 6px;
  margin-right: 6px;
  width: calc(100% - 12px);
  height: 100%;
  overflow: hidden;
}

.header-container {
  display: flex;
  width: 100%;
  height: var(--block-size);
  justify-content: flex-end;
  background-color: white;
}

.days {
  display: flex;
  width: calc(var(--block-size) * 7);
}

.day {
  /* border: 1px solid; */
  display: flex;
  justify-content: center;
  align-items: flex-end;
  width: var(--block-size);
  font-size: 0.7em;
}

.content-container {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  height: 100%;
  justify-content: flex-end;
}

::-webkit-scrollbar { 
    display: none; 
}

.months-container {
  display: block;
  width: calc(var(--block-size) * 7);
  overflow-y: scroll;
}

.month-container {
  display: block;
  width: 100%;
}

.month-name-container {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: var(--block-size);
}

.month-name {
  font-size: 0.7em;
  font-weight: bold;
}

.stars-container {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  /* height: var(--block-size); */
}

.star-container {
  display: flex;
  justify-content: center;
  align-items: center;
  width: var(--block-size);
  height: var(--block-size);
}

.star {
  width: 95%;
  height: 95%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.today-text {
  position: absolute;
  color: white;
  font-size: 1.1em;
}

.markers-container {
  border-top: 1px solid white;
  width: 100%;
  height: 2px;
  display: flex;
  align-self: flex-end;
  justify-content: flex-end;
}

.photo-marker {
  width: 100%;
  height: 100%;
  background-color: #ff8787;
}

.location-marker {
  width: 100%;
  height: 100%;
  background-color: #4dabf7;
}

.star.empty {
  visibility: hidden;
}

.star.didnt {
  background: #ebedf0;
}

.star.didnt .today-text {
  color: black;
}

.star.pretty-early {
  background: #ebfbee;
}

.star.pretty-early .today-text {
  color: black;
}

.star.early {
  background: #b2f2bb;
}

.star.normal {
  background: #69db7c;
}

.star.late {
  background: #40c057;
}

.star.pretty-late {
  background: #2f9e44;
}

.star.future-date {
  background: #ebedf0;
}
