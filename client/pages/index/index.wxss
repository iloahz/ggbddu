page {
  /* use 96% to avoid scroll */
  height: 96%;
}

.container {
  display: flex;
  height: calc(100% - 32px);
  flex-direction: column;
  margin: 16px;
}

.note-container {
  width: 100%;
  height: 15%;
  margin-bottom: 6px;
}

.datetime-container {
  height: 20px;
  margin-bottom: 6px;
}

.photo-container {
  width: 100%;
  height: 30%;
  margin-bottom: 6px;
}

.location-container {
  width: 100%;
  height: calc(30% + 20px);
  margin-bottom: 6px;
}

.commit-container {
  width: 100%;
  height: 10%;
  margin-top: 16px;
}

.note {
  font-size: 1em;
  height: 100%;
}

.note-textarea {
  height: 100%;
}

.placeholder {
  color: #999999;
}

.location {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.map {
  width: 100%;
  height: calc(100% - 20px);
}

.map > map {
  width: 100%;
  height: 100%;
}

.location-text {
  display: flex;
  width: 100%;
  height: 20px;
  justify-content: center;
  font-size: 14px;
  color: #233333;
}

.photo {
  display: flex;
  width: 100%;
  height: 100%;
}

.user-photo {
  width: 100%;
  height: 100%;
  border-radius: 6px;
  overflow: hidden;
}

.user-photo-image {
  width: 100%;
  height: 100%;
}

.add-photo {
  width: 100%;
  height: 100%;
  border-radius: 6px;
  background: #dddddd;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-photo-image {
  width: 48px;
  height: 48px;
}

.datetime {
  font-size: 14px;
}

.datetime-text {
  padding: 2px;
  border-radius: 3px;
  background-color: #dddddd;
}